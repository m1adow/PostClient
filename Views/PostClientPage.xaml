<Page
    x:Class="PostClient.PostClientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PostClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PostClient.ViewModels"
    xmlns:uc="using:PostClient.Views.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <vm:PostClientViewModel x:Key="viewModel"/>
    </Page.Resources>
    <Grid DataContext="{StaticResource viewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10"
                    Grid.Column="0">
            <Button Content="Login"
                    Command="{Binding ShowLoginControlsCommand}"
                    Visibility="{Binding ManagmentButtonsVisibility}"/>
            <Button Content="New mail"
                    Command="{Binding SendCommand}"
                    Visibility="{Binding ManagmentButtonsVisibility}"/>
            <Button Content="Sync"
                    Command="{Binding LoadCommand}"
                    Visibility="{Binding ManagmentButtonsVisibility}"/>
            <TextBlock Text="Login:"
                       Margin="0,50,0,0"
                       Visibility="{Binding LoginControlsVisibility}"/>
            <TextBox Visibility="{Binding LoginControlsVisibility}"
                     Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Password:"
                       Visibility="{Binding LoginControlsVisibility}"/>
            <TextBox Visibility="{Binding LoginControlsVisibility}"
                     Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <CheckBox Content="Remember me"
                      Visibility="{Binding LoginControlsVisibility}"
                      IsChecked="{Binding IsRememberMeChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Select service:"
                       Visibility="{Binding LoginControlsVisibility}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton Grid.Column="0"
                             Content="Gmail" 
                             IsChecked="{Binding IsGmailRadioButtonChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding LoginControlsVisibility}"/>
                <RadioButton Grid.Column="1" 
                             Content="Outlook"
                             IsChecked="{Binding IsOutlookRadioButtonChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding LoginControlsVisibility}"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Margin="5"
                        Content="OK"
                        Command="{Binding LoginCommand}"
                        Visibility="{Binding LoginControlsVisibility}"/>
                <Button Grid.Column="1"
                        Margin="5"
                        Content="Cancel"
                        Command="{Binding CancelLoginControlsCommand}"
                        Visibility="{Binding LoginControlsVisibility}"/>
            </Grid>
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Sent"
                        Grid.Column="0"/>
                <Button Content="Favourite"
                        Grid.Column="1"/>
                <Button Content="Deleted"
                        Grid.Column="2"/>
                <Button Content="&lt;"
                        Grid.Column="3"
                        Command="{Binding LoadPreviousListOfMessagesCommand}"/>
                <Button Content=">"
                        Grid.Column="4"
                        Command="{Binding LoadNextListOfMessagesCommand}"/>
            </Grid>
            <ListView Margin="10"
                      ItemsSource="{Binding Messages, Mode=TwoWay}"
                      Grid.Row="1"
                      SelectedValue="{Binding SelectedMailMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <uc:MailMessageControl MailMessage="{Binding}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="X"
                        Grid.Column="2"
                        Background="red"
                        Command="{Binding CloseMessageCommand}"
                        Visibility="{Binding MessageBodyControlsVisibility}"/>
            </Grid>
            <uc:MessageBodyControl MessageBody="{Binding SelectedMailMessage.Body}"
                                   Visibility="{Binding MessageBodyControlsVisibility}"
                                   Grid.Row="1"
                                   Margin="10"/>
            <Grid Grid.Row="1"
                  Visibility="{Binding SendMessageControlsVisibility}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.7*"/>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="From"
                                   Margin="10,0,0,0"
                                   Grid.Column="0"
                                   Grid.Row="0"/>
                        <TextBox Margin="5,0,5,0"
                                 Grid.Column="1"
                                 Grid.Row="0"
                                 Text="{Binding MessageSender}"/>
                        <TextBlock Text="To"
                                   Margin="10,0,0,0"
                                   Grid.Column="0"
                                   Grid.Row="1"/>
                        <TextBox Margin="5,0,5,0"
                                 Grid.Column="1"
                                 Grid.Row="1"
                                 Text="{Binding MessageReciever, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Margin="10,0,0,0"
                                       Text="Name"/>
                            <TextBox Margin="5"
                                     Text="{Binding MessageName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,0,0,0"
                                       Text="Subject"/>
                            <TextBox Margin="5"
                                     Text="{Binding MessageSubject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                <TextBlock Text="Message:"
                           Grid.Row="1"
                           Margin="10,0,0,0"/>
                <TextBox Margin="5,0,5,0"
                         Grid.Row="2"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Text="{Binding MessageBody, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Cancel"
                            Grid.Column="0"
                            Margin="5"
                            HorizontalAlignment="Left"
                            Command="{Binding CancelSendingMessageCommand}"/>
                    <Button Content="Send"
                            Grid.Column="1"
                            Margin="5"
                            HorizontalAlignment="Right"
                            Command="{Binding SendMessageCommand}"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
